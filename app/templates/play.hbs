<div class="playing-field">
  <div class="upper-field">
    {{flipping-deck cards=model updateCard=(action 'updateCard')}}
    <div class="finished-stacks">
      {{finish-stack suit="h" cards=model}}
      {{finish-stack suit="s" cards=model}}
      {{finish-stack suit="d" cards=model}}
      {{finish-stack suit="c" cards=model}}
    </div>
  </div>
  <div class="lower-field">
    {{card-stack stackNumber=1 cards=model updateCard=(action 'updateCard')}}
    {{card-stack stackNumber=2 cards=model updateCard=(action 'updateCard')}}
    {{card-stack stackNumber=3 cards=model updateCard=(action 'updateCard')}}
    {{card-stack stackNumber=4 cards=model updateCard=(action 'updateCard')}}
    {{card-stack stackNumber=5 cards=model updateCard=(action 'updateCard')}}
    {{card-stack stackNumber=6 cards=model updateCard=(action 'updateCard')}}
    {{card-stack stackNumber=7 cards=model updateCard=(action 'updateCard')}}
  </div>
</div>
