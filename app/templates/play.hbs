<div class="playing-field">
  <div class="upper-field">
    {{flipping-deck cards=cardsInFlippingDeck finishCard=finishCard}}

    <div class="finished-stacks">
      {{finish-stack suit="h" cards=cardsInHeartStack}}
      {{finish-stack suit="s" cards=cardsInSpadeStack}}
      {{finish-stack suit="d" cards=cardsInDiamondStack}}
      {{finish-stack suit="c" cards=cardsInClubStack}}
    </div>
  </div>

  <div class="lower-field">
    {{card-stack stackNumber=1 cards=cardsInFirstStack finishCard=finishCard}}
    {{card-stack stackNumber=2 cards=cardsInSecondStack finishCard=finishCard}}
    {{card-stack stackNumber=3 cards=cardsInThirdStack finishCard=finishCard}}
    {{card-stack stackNumber=4 cards=cardsInFourthStack finishCard=finishCard}}
    {{card-stack stackNumber=5 cards=cardsInFifthStack finishCard=finishCard}}
    {{card-stack stackNumber=6 cards=cardsInSixthStack finishCard=finishCard}}
    {{card-stack stackNumber=7 cards=cardsInSeventhStack finishCard=finishCard}}
  </div>
</div>
